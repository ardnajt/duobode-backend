{
  "compilerOptions": {
    "target": "ES6",
    "experimentalDecorators": true,
    "module": "CommonJS",
    "baseUrl": "./src",
    "paths": {
      "@orm": ["orm"],
      "@entities/*": ["entities/*"],
      "@modules/*": ["modules/*"],
      "@jobs/*": ["jobs/*"],
      "@plugins/*": ["plugins/*"],
      "@app": ["src/index.ts"]
    },
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "src/global.d.ts"  ],
  "ts-node": {
    "transpileOnly": true
  }
}
